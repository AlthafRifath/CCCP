<web-app xmlns="http://jakarta.ee/xml/ns/jakartaee"
         version="5.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://jakarta.ee/xml/ns/jakartaee">

    <servlet>
        <servlet-name>ClientTestServlet</servlet-name>
        <servlet-class>com.syos.api.ClientTestServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ClientTestServlet</servlet-name>
        <url-pattern>/api/client</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CustomerSignupServlet</servlet-name>
        <servlet-class>com.syos.api.CustomerSignupServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>CustomerSignupServlet</servlet-name>
        <url-pattern>/api/customer/signup</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CustomerLoginServlet</servlet-name>
        <servlet-class>com.syos.api.CustomerLoginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>CustomerLoginServlet</servlet-name>
        <url-pattern>/api/customer/login</url-pattern>
    </servlet-mapping>

</web-app>
